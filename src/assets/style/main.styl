*
  box-sizing border-box

.container
  width 100%
  height 657px
  display flex
  justify-content center
  font-family 'Montserrat', sans-serif
  background-color #FFFAE6

.content
  width 92%
  height 500px
  margin 55px 0 0 0
  display flex
  flex-direction column
  background-color #FFFFFF
  border-radius 5px
  -webkit-box-shadow 0px 0px 3px 0px rgba(0,0,0,0.1)
  -moz-box-shadow 0px 0px 3px 0px rgba(0,0,0,0.1)
  box-shadow 0px 0px 3px 0px rgba(0,0,0,0.1)

.content__back
  width 100%
  height 50px
  margin 0
  padding-left 40px
  display flex
  align-items center
  // border 1px solid

.transaction
  width 100%
  display flex

.transaction__detail
  width 75%
  height 450px
  // border 1px solid

.summary
  width 25%
  height 450px
  padding 20px
  // border 1px solid
  border-left 1px solid #FFEBD3

.transaction__header
  width 100%
  height 100px
  padding 0 40px
  display flex
  justify-content space-between
  align-items center
  // border 1px solid

.transaction__form
  width 100%
  padding 0 40px
  display flex

.transaction__info
  width 60%
  margin-right 30px
  display flex
  flex-direction column

.transaction__dropshipper
  width 40%
  display flex
  flex-direction column
  
.form
  width 100%
  padding 12px 20px
  margin 5px
  font-weight 500
  font-size 1em
  border 1px solid #CCCCCC
  